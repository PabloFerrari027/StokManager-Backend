{
  "name": "stokmanager-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch src/shared/infra/http/server.ts",
    "start": "node -r tsconfig-paths/register build/shared/infra/http/server.js",
    "test": "vitest",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\"",
    "docker:compose": "docker compose -f src/shared/infra/docker/docker-compose.yml up -d",
    "docker:remove": "docker-compose -f src/shared/infra/docker/docker-compose.yml down -v",
    "prisma:generate": "npx prisma generate --schema=./src/shared/infra/database/postgreSQL/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/shared/infra/database/postgreSQL/schema.prisma",
    "prisma:migrate:deploy": "npx prisma migrate deploy --schema=./src/shared/infra/database/postgreSQL/schema.prisma",
    "prisma:seed": "tsx src/shared/infra/database/postgreSQL/seed.ts"
  },
  "keywords": [],
  "author": "Pablo Ferrari",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "prisma": "^5.7.0",
    "reflect-metadata": "^0.2.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "tsyringe": "^4.8.0",
    "vite-tsconfig-paths": "^4.2.2",
    "zod": "^3.22.4"
  }
}
